  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "cpy-cli": "^6.0.0",
    "live-server": "^1.2.2"
  }
}
